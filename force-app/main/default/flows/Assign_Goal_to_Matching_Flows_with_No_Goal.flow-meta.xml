<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>49.0</apiVersion>
    <description>Flowdometer automation used to attach a new Goal record to any Flow records of the specified object that don&apos;t have a goal. Uncheck the &apos;Match Goal with Flows&apos; checkbox when creating a goal to skip this.</description>
    <interviewLabel>Assign Goal to Matching Flows with No Goal {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Flowdometer - Assign Goal to Matching Flows with No Goal</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Assign_Goal_to_matching_Flows</name>
        <label>Assign Goal to matching Flows</label>
        <locationX>301</locationX>
        <locationY>50</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Goal__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Tracked_Field_Name__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varTrackedFieldName</elementReference>
            </value>
        </filters>
        <filters>
            <field>Tracked_Object__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varTrackedObject</elementReference>
            </value>
        </filters>
        <filters>
            <field>isGoal__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varType</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Goal__c</field>
            <value>
                <elementReference>varGoalId</elementReference>
            </value>
        </inputAssignments>
        <object>Flow__c</object>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>Assign_Goal_to_matching_Flows</targetReference>
        </connector>
    </start>
    <status>Obsolete</status>
    <variables>
        <name>varGoalId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>varTrackedFieldName</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>varTrackedObject</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <description>Used to denote which type of process. For example, on an Onboarding object record, the Type might be Customer or Partner</description>
        <name>varType</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
</Flow>
